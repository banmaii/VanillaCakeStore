@using VanillaCakeStore.Services;
@{
    ViewData["Title"] = "Edit Profile";
    var cusName = Context.Session.GetString(Constants._cusName);
}
@model VanillaCakeStoreWebAPI.DTO.Customer.CustomerEditDTO

<section class="hero">
    <div class="container">
        <section class="featured spad">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-title">
                            <h2 style="font-weight: normal;">Welcome, @cusName</h2>
                        </div>
                        <div class="featured__controls">
                            <ul>
                                <a asp-action="Info" asp-controller="Customer">
                                <li>Personal Information |</li></a>
                                <a asp-action="Order" asp-controller="Customer">
                                <li>All orders |</li></a>
                                <a asp-action="OrderCanceled" asp-controller="Customer">
                                <li>Canceled Order</li></a>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div id="content-right">
            <div id="form">
                <div id="form-content">
                    <form asp-action="EditProfile" asp-controller="Customer">
                        <label>Company name<span style="color: red;">*</span></label><br />
                        <input asp-for="CompanyName" class="form-control" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>

                        <label>Contact name<span style="color: red;">*</span></label><br />
                        <input asp-for="ContactName" class="form-control" />
                        <span asp-validation-for="ContactName" class="text-danger"></span>

                        <label>Contact title<span style="color: red;">*</span></label><br />
                        <input asp-for="ContactTitle" class="form-control" />
                        <span asp-validation-for="ContactTitle" class="text-danger"></span>

                        <label>Address<span style="color: red;">*</span></label><br />
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>

                        <label>Email<span style="color: red;">*</span></label><br />
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <div></div>
                        <input type="submit" value="Save" style="margin-bottom: 30px;" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>