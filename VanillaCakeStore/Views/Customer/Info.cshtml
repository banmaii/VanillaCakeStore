@using VanillaCakeStore.Services;
@{
    ViewData["Title"] = "Profile";
    var info = ViewData["customerInfo"] as VanillaCakeStoreWebAPI.DTO.Customer.CustomerDTO;
    var cusName = Context.Session.GetString(Constants._cusName);
}
@model VanillaCakeStoreWebAPI.DTO.Customer.CustomerDTO

<section class="hero">
    <div class="container">
        <div id="col-lg-4">

            <section class="featured spad">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="section-title">
                                <h2 style="font-weight: normal;">Welcome, @cusName</h2>
                            </div>
                            <div class="featured__controls">
                                <ul>
                                    <a asp-action="Info" asp-controller="Customer">
                                    <li>Personal Information |</li></a>

                                    <a asp-action="Order" asp-controller="Customer">
                                    <li>All orders |</li></a>
                                     <a asp-action="OrderCanceled" asp-controller="Customer">
                                    <li>Canceled Order</li></a>
                                </ul>

                            </div>
                        </div>
                    </div>
                </div>
             </section>
        </div>
        <div id="col-lg-8">
            <h2 class="m-3">Personal Information</h2>
            <div class="content-main">
                <div id="profile-content">
                    <div class="profile-content-col">
                        <div>Company name: <br />@info.CompanyName</div>
                        <div>Contact name: <br />@info.ContactName</div>
                        <div>
                            <a asp-action="Edit" asp-controller="Customer" class="btn btn-danger"> Edit Info</a>
                            <a asp-action="ChangePass" asp-controller="Authentication" class="btn btn-danger">Change Password</a>
                        </div>
                    </div>
                    <div class="profile-content-col">
                        <div>Company title: <br />@info.ContactTitle</div>
                        <div>Address: <br />@info.Address</div>
                    </div>
                    <div class="profile-content-col">
                        <div>Email: <br />@info.Email</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
