@using VanillaCakeStore.Services;
@{
    ViewData["Title"] = "Profile";
    var orders = ViewData["orders"] as IEnumerable<VanillaCakeStoreWebAPI.DTO.Order.OrderDTO>;
    var cusName = Context.Session.GetString(Constants._cusName);
}


<section class="hero">
    <div class="container">
        <section class="featured spad">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-title">
                            <h2 style="font-weight: normal;">Welcome, @cusName</h2>
                        </div>
                        <div class="featured__controls">
                            <ul>
                                <a asp-action="Info" asp-controller="Customer">
                                <li>Personal Information |</li></a>
                                <a asp-action="Order" asp-controller="Customer">
                                <li>All orders |</li></a>
                                <a asp-action="OrderCanceled" asp-controller="Customer">
                                <li>Canceled Order</li></a>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    <div id="content-right"> 
        <h2>List Order</h2>
        <div class="content-main">
            <div id="profile-content-order">
                @foreach (var order in orders) 
                { 
                    <div>
                         <div class="profile-order-title">
                            <div class="profile-order-title-left">
                                <div>Order creation date: @order.OrderDate</div>
                                @*<div>Order: <a href="#">#@order.OrderId</a></div>*@

                            </div>
                            <div class="profile-order-title-right">
                                @if (order.RequiredDate == null)
                                {
                                    <span>Canceled</span>
                                }
                                else if (order.ShippedDate == null) 
                                {
                                    <span>Pending</span>
                                }
                                else
                                {
                                    <span style="color: blue;">Completed</span>
                                }
                            </div>
                        </div>
                        @foreach (var item in order.OrderDetails)
                        {
                            <div class="profile-order-content">
                                <div class="profile-order-content-col1">
                                    <a asp-action="ProductDetail" asp-route-id="@item.ProductID" asp-controller="Home"><img src="~/images/cake-item2.jpg" width="100%" /></a>
                                </div>
                                <div class="profile-order-content-col2 m-4">@item.ProductName</div>
                                <div class="profile-order-content-col3 m-4">Quantity: @item.Quantity</div>
                                    <div class="profile-order-content-col4 m-4">@item.UnitPrice $</div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
</section>
