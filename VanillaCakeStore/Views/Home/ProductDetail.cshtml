@{
    ViewData["Title"] = "Product Detail";
    var product = ViewData["product"] as VanillaCakeStoreWebAPI.DTO.Product.ProductDTO;
}
<section class="hero">
    <div class="container">
        <div id="content-detail">
            <div id="content-title">
                <a asp-controller="Home" asp-action="Index">Home</a> >
                <a href="#">@product.CategoryName</a> >
                 @product.ProductName
            </div>
            <div id="product">
                <div id="product-name">
                    <h2>@product.ProductName</h2>
                    <div id="product-detail">
                        <div id="product-detail-left" class="mx-5">
                            <div id="product-img">
                                <img src="~/images/postImg1.jpg" />
                            </div>
                            <div id="product-img-items">
                                <div><a href="#"><img src="~/images/postImg1.jpg" /></a></div>
                                <div><a href="#"><img src="~/images/postImg2.jpg" /></a></div>
                                <div><a href="#"><img src="~/images/postitem.jpg" /></a></div>
                                <div><a href="#"><img src="~/images/postitem1.jpg" /></a></div>
                            </div>
                        </div>
                        <div id="product-detail-right">
                            <div id="product-detail-right-content">
                                <div class="mx-3" id="product-price">Price: $@product.UnitPrice</div>
                                <div class="mx-3 mb-1" id="product-detail-buttons">
                                    <div id="product-detail-button">
                                    <form asp-action="AddToCart" asp-route-id="@product.ProductId" asp-route-quantity="1" asp-controller="Cart">
                                        <button type="submit" class="btn btn-danger">Buy</button>
                                    </form>
                                    </div>
                                </div>
                                <div id="info-detail-title">
                                    <h2>Information deltail</h2>
                                    <div style="margin:10px auto;">
